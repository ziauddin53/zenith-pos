{
  "name": "zenith-pos",
  "private": true,
  "version": "1.1.0",
  "description": "Zenith POS System",
  "main": "electron/main.js",
  "scripts": {
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "dev": "vite",
    "build": "tsc && vite build",
    "build:github": "cross-env GITHUB_PAGES=true tsc && vite build",
    "postbuild": "node scripts/obfuscate.js",
    "preview": "vite preview",
    "electron:start": "npm run build && electron .",
    "electron:pack": "npm run build && electron-builder --dir",
    "electron:dist": "npm run build && electron-builder",
    "android:init": "cap add android",
    "android:build": "npm run build && cap sync && cap open android"
  },
  "dependencies": {
    "@capacitor/android": "^5.7.0",
    "@capacitor/core": "^5.7.0",
    "@google/genai": "^1.30.0",
    "@google/generative-ai": "^0.24.1",
    "@supabase/supabase-js": "^2.83.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.12.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.7.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "gh-pages": "^6.3.0",
    "javascript-obfuscator": "^4.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.zenithpos.app",
    "productName": "Zenith POS",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    }
  }
}
